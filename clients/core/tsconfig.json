{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "noEmit": true,
    "module": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "paths": {
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*stories.tsx"]
}
