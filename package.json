{
  "name": "comments",
  "version": "0.0.0",
  "description": "A library to enable realtime feedbacks in the form of preview comments",
  "scripts": {
    "build": "tsc && tsup --env.NODE_ENV production",
    "dev": "tsc-watch --onSuccess \"tsup --env.NODE_ENV production\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shivam123425/comments.git"
  },
  "author": "shivam123425",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shivam123425/comments/issues"
  },
  "homepage": "https://github.com/shivam123425/comments#readme",
  "engines": {
    "node": ">=16.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.206",
    "@types/node": "^18.11.13",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "esbuild-plugin-svgr": "^1.0.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "pretty-quick": "^3.1.3",
    "tsc-watch": "^6.0.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@stitches/react": "^1.2.8",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
